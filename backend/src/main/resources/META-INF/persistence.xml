<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="org.hse.moodactivities.backend">
        <description>
            Persistence unit for the MoodActivites backend
        </description>

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>org.hse.moodactivities.backend.models.Event</class>

        <properties>
            <!-- Database connection settings -->
            <!-- TODO: this fails inside docker. Idk why -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/" />

            <!-- TODO: autogen creds -->
            <property name="jakarta.persistence.jdbc.user" value="postgres" />
            <property name="jakarta.persistence.jdbc.password" value="postgres" />

            <!-- Automatically export the schema -->
            <!-- FIXME: this should probably not be drop-and-create -->
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create" />

            <!-- Echo all executed SQL to console -->
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.highlight_sql" value="true" />
        </properties>

    </persistence-unit>

</persistence>

