<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.MoodActivities" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_color_1</item>
        <item name="colorPrimaryVariant">@color/theme_color_1_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_color_2</item>
        <item name="colorSecondaryVariant">@color/theme_color_2_dark</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>

        <!-- Customize your theme here. -->
        <item name="font">@font/app_font</item>
    </style>
</resources>
