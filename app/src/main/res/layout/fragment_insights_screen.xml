                                            android:layout_marginStart="5dp"
                                            android:fontFamily="@font/roboto_bold"
                                            android:gravity="center"
                                            android:text="2"
                                            android:textColor="@color/black"
                                            android:textSize="12sp"
                                            app:layout_constraintStart_toStartOf="parent"
